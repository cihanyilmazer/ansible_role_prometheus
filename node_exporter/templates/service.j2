[Unit]
Description=Node Exporter
Wants=network-online.target
After=network-online.target

[Service]
User={{ pmh_node_exporter_service_user }}
Group={{ pmh_node_exporter_service_user }}
Type=simple
ExecStart=/usr/local/bin/node_exporter --web.config.file=/etc/node_exporter_config.yml

[Install]
WantedBy=multi-user.target
